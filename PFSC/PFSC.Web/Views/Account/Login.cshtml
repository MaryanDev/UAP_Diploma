@model PFSC.Models.Security.LoginModel
<div id="back">
    <div class="backLeft"></div>
</div>

<div id="slideBox">
    <div class="topLayer">
        <div class="right">
            <div class="content">
                <h2>Login</h2>
                <form method="post" asp-action="Login">
                    <div class="form-group">
                        <input asp-for="LoginName" placeholder="username" />
                        <span class="text-danger" asp-validation-for="LoginName"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" placeholder="password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <a asp-controller="Account" asp-action="Register" class="off btn btn-primary">Sign Up</a>
                    <button id="login" type="submit">Login</button>
                    @*<div class="danger" asp-validation-summary="All"></div>*@
                </form>
            </div>
        </div>
    </div>
</div>