@model PFSC.Models.Security.LoginModel

@section HeadStyles{
    <link href="~/Content/Styles/site/account.css" rel="stylesheet" />
}
<div id="back">
    <div class="backLeft"></div>
</div>

<div id="slideBox">
    <div class="topLayer">
        <div class="right">
            <div class="content">
                <h2>Login</h2>
                <form method="post" asp-action="Login">
                    <div class="form-group">
                        <input asp-for="LoginName" placeholder="username" />
                        <span class="text-danger" asp-validation-for="LoginName"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" placeholder="password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <a asp-controller="Account" asp-action="Register" class="off btn btn-primary">Реєстрація</a>
                    <button id="login" type="submit">Ввійти</button>
                </form>
            </div>
        </div>
    </div>
</div>