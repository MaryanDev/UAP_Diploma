    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>*@
<script src="~/Scripts/factoryAdminDashboard/slick/slick.js"></script>
<script>
    $(document).ready(function () {
        $('#currentImage').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            //asNavFor: '#imageviewer'
        });

        $('#imageviewer').slick({
            slidesToShow: 4,
            slidesToScroll: 1,
            asNavFor: '#currentImage',
            dots: true,
            centerMode: true,
            focusOnSelect: true
        });
    })

</script>
